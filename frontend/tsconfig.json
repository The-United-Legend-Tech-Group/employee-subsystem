{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/payroll/components/*": ["./src/app/employee/(protected)/payroll/execution/_components/*"],
      "@/payroll/libs/*": ["./src/app/employee/(protected)/payroll/execution/_libs/*"],
      "@/payroll/hooks/*": ["./src/app/employee/(protected)/payroll/execution/_hooks/*"],
      "@/payroll/types/*": ["./src/app/employee/(protected)/payroll/execution/_types/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
